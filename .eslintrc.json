{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "extends": ["airbnb-base", "eslint:recommended"],
    "rules": {
        "quotes": ["error",
            "single", {
                "allowTemplateLiterals": true
            }
        ],
        "semi": ["warn", "always"],
        "comma-dangle": ["off"],
        "indent": ["off"],
        "no-console": ["off"],
        "eol-last": ["off"],
        "arrow-body-style": ["as-needed"],
        "import/newline-after-import": ["off"],
        "consistent-return": ["warn"]
    }
}